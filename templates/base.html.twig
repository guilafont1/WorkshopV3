<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Lébani{% endblock %}</title>
        <!-- Lien Bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <!-- Lien AOS pour les animations -->
        <link href="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <body>
        <header class="bg-dark text-white p-3">
            <div class="container d-flex justify-content-between">
                <div class="d-flex align-items-center"> <!-- Aligne le logo et les liens -->
                    <a href="{{ path('app_home') }}" class="mr-3">
                        <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo" style="height: 50px;"> <!-- Ajustez la hauteur ici -->
                    </a>
                    <nav>
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('app_home') }}">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('app_catalogue') }}">Catalogue</a>
                            </li>
                            <!-- Afficher "Mes Réservations" seulement si l'utilisateur est connecté -->
                            {% if is_granted('ROLE_USER') %}
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="{{ path('app_mes_reservations') }}">Mes Réservations</a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
                <div class="d-flex align-items-end">
                    <!-- Vérification si l'utilisateur est connecté ou non -->
                    {% if app.user %}
                        <!-- Si connecté, afficher le lien de déconnexion -->
                        <a href="{{ path('app_logout') }}" class="nav-link text-white btn-login">Se déconnecter</a>
                    {% else %}
                        <!-- Si non connecté, afficher les liens de connexion et d'enregistrement -->
                        <a href="{{ path('app_login') }}" class="nav-link text-white btn-login">Connexion</a>
                        <a href="{{ path('app_register') }}" class="nav-link text-white btn-login">S'enregistrer</a>
                    {% endif %}
                </div>
            </div>
        </header>

        <main class="container mt-4" data-aos="fade-up">
            {% block body %}{% endblock %}
        </main>

        <footer class="bg-dark text-white text-center py-3 mt-4">
            <p>© 2024 Mon site Symfony</p>
        </footer>

        <!-- Script Bootstrap -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <!-- Script AOS pour les animations -->
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.js"></script>
        <script>
            AOS.init();
        </script>
    </body>
</html>
